<div class="container" id="index-container">
  <div class="row">
    <div class="col-md-7">
      <!-- -->
      <% @rooms.each do |room| %>
      <div class="room">
        <h2><%= room.name %></h2>
        <ul>
          <% room.appointments.each do |appt| %>
            <!-- DO NOT do AR Queries in your views -->
            <!-- {name: , start_tm: , end_tm} -->
          <li><%= Group.find_by(id: appt.group_id).name %>: <%= appt.start_datetime.strftime("%b %d %l:%M %p") %> to <%= appt.end_datetime.strftime("%l:%M %p") %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>

    <div class="col-md-5">
      <p>Login using your email address and password. Checkout upcoming appointments. Reserve a room for your group.</p>
      <form action="/users/login" method="get">
        <button class="label label-danger" type="submit">Login</button>
      </form>
    </div>
  </div>
</div>


